{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Expediteur</th>
                <td>{{ message.expediteur }}</td>
            </tr>
            <tr>
                <th>Corps</th>
                <td>{{ message.corps }}</td>
            </tr>
            <tr>
                <th>SendAt</th>
                <td>{{ message.sendAt ? message.sendAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_message_index') }}">back to list</a>

    <a href="{{ path('app_admin_message_edit', {'id': message.id}) }}">edit</a>

    {{ include('admin/message/_delete_form.html.twig') }}
{% endblock %}
