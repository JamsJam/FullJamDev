{% extends 'base.html.twig' %}

{% block title %}Commentaires index{% endblock %}

{% block body %}
    <h1>Commentaires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Nom</th>
                <th>Lien</th>
                <th>CommentAt</th>
                <th>IsValidated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.message }}</td>
                <td>{{ commentaire.nom }}</td>
                <td>{{ commentaire.lien }}</td>
                <td>{{ commentaire.commentAt ? commentaire.commentAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.isValidated ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_commentaires_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_admin_commentaires_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_commentaires_new') }}">Create new</a>
{% endblock %}
