{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ projet.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ projet.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ projet.lien }}</td>
            </tr>
            <tr>
                <th>Github</th>
                <td>{{ projet.github }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ projet.images ? projet.images|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_projet_index') }}">back to list</a>

    <a href="{{ path('app_admin_projet_edit', {'id': projet.id}) }}">edit</a>

    {{ include('admin/projet/_delete_form.html.twig') }}
{% endblock %}
